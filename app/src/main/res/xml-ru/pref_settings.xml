<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:key="sounds"
        android:title="Звуки">
        <com.github.axet.androidlibrary.widgets.SeekBarPreference
            android:defaultValue="1"
            android:key="volume"
            android:summary="Установить громкость оповещений"
            android:title="Уменьшить громкость" />

        <com.github.axet.hourlyreminder.widgets.BeepPreference
            android:defaultValue=""
            android:key="beep_custom"
            android:summary="Настроить длительность и частоту сигнала"
            android:title="Настроить сигнал" />

        <SwitchPreferenceCompat
            android:defaultValue="false"
            android:key="callsilence"
            android:summary="Не использовать звуки вовремя разговора по телефону"
            android:title="Тишина вовремя звонков" />

        <SwitchPreferenceCompat
            android:defaultValue="false"
            android:key="musicsilence"
            android:summary="Не использовать звуки вовремя прослушивания музыки"
            android:title="Тишина вовремя музыки" />

        <SwitchPreferenceCompat
            android:defaultValue="false"
            android:key="phonesilence"
            android:summary="Не использовать звуки если телефон переведен в беззвучный режим"
            android:title="Тишина в беззвучном режиме" />

        <com.github.axet.hourlyreminder.widgets.VibratePreference
            android:defaultValue="false"
            android:key="vibrate"
            android:persistent="false"
            android:summary="Использовать вибратор для будильника и оповещений"
            android:title="Вибратор" />
    </PreferenceCategory>

    <PreferenceCategory
        android:key="advanced"
        android:title="Оповещения">
        <SwitchPreferenceCompat
            android:defaultValue="true"
            android:key="wakeup"
            android:summary="Включать экран во время оповещений"
            android:title="Включать экран" />

        <SwitchPreferenceCompat
            android:defaultValue="true"
            android:key="alarm"
            android:summary="Использовать тип для оповещений 'alarm' (пробуждение в режиме Doze)"
            android:title="Точное время" />
    </PreferenceCategory>

    <PreferenceCategory android:title="Будильник">
        <ListPreference
            android:defaultValue="0"
            android:entries="@array/increasing_volume_text"
            android:entryValues="@array/increasing_volume_values"
            android:key="increasing_volume"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null"
            android:summary="Постепенно увеличить громкость"
            android:title="Плавная громкость" />

        <ListPreference
            android:defaultValue="0"
            android:entries="@array/snooze_after_text"
            android:entryValues="@array/snooze_after_values"
            android:key="snooze_after"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null"
            android:summary="Set snooze time after minutes"
            android:title="Отложить будильник после..." />

        <ListPreference
            android:defaultValue="10"
            android:entries="@array/snooze_text"
            android:entryValues="@array/snooze_values"
            android:key="snooze_time"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null"
            android:summary="Set snooze time minutes"
            android:title="Отложить будильник на..." />
    </PreferenceCategory>

    <PreferenceCategory
        android:key="speak"
        android:title="Голос">
        <ListPreference
            android:defaultValue=""
            android:entries="@array/languages_text"
            android:entryValues="@array/languages_values"
            android:key="language"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null"
            android:summary="Выбрать язык голоса"
            android:title="Язык голоса" />

        <SwitchPreferenceCompat
            android:defaultValue="true"
            android:key="speak_ampm"
            android:summary="Произность время дня и ночи (утро, вечер, день, ночь)"
            android:title="Произносить время дня" />
    </PreferenceCategory>

    <PreferenceCategory
        android:key="application"
        android:title="Приложение">
        <com.github.axet.androidlibrary.widgets.OptimizationPreferenceCompat
            android:defaultValue="true"
            android:key="optimization"
            android:summary="Предотвращать удаление программы из памяти телефона"
            android:title="Оптимизация батареи" />

        <SwitchPreferenceCompat
            android:defaultValue="false"
            android:key="notifications"
            android:persistent="false"
            android:summary="Показывать уведомления"
            android:title="Уведомления" />

        <ListPreference
            android:defaultValue="Theme_White"
            android:entries="@array/themes_text"
            android:entryValues="@array/themes_values"
            android:key="theme"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null"
            android:summary="Выбрать тему"
            android:title="Тема приложения" />

        <ListPreference
            android:defaultValue="Mon"
            android:entries="@array/weekstart_text"
            android:entryValues="@array/weekstart_values"
            android:key="weekstart"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null"
            android:summary="Первый день недели"
            android:title="Начало недели" />

        <com.github.axet.androidlibrary.widgets.AboutPreferenceCompat
            android:dialogMessage="R.raw.about"
            android:persistent="false" />
    </PreferenceCategory>
</PreferenceScreen>
