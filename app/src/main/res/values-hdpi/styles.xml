<resources>

    <style name="AppThemeLight" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccentLight</item>
        <item name="alarmBackground">@color/alarmBackgroundLight</item>
        <item name="alarmRing">@drawable/round_circle_light</item>
        <item name="alarmDismiss">@drawable/round_dismiss_light</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
        <item name="dialogTheme">@style/AppThemeDialogLight</item>
        <item name="alertDialogTheme">@style/AppThemeDialogLight</item>
        <item name="round_corners">@drawable/round_corners_light</item>
    </style>

    <style name="AppThemeDialogLight" parent="@style/Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorAccentLight</item>
    </style>

    <style name="AppThemeLight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppThemeLight.FullScreen" parent="@android:style/Theme.Light.NoTitleBar.Fullscreen"></style>

    <style name="AppThemeLight.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <style name="AppThemeLight.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppThemeDark" parent="Theme.AppCompat">
        <item name="alarmBackground">@color/actionBarBackgroundDark</item>
        <item name="alarmRing">@drawable/round_circle_dark</item>
        <item name="alarmDismiss">@drawable/round_dismiss_dark</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
        <item name="round_corners">@drawable/round_corners_dark</item>
    </style>

    <style name="AppThemeDark.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppThemeDark.FullScreen" parent="@android:style/Theme.NoTitleBar.Fullscreen"></style>

    <style name="HourRound">
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_margin">3dp</item>
    </style>

    <style name="Hour30">
        <item name="android:layout_width">5dp</item>
        <item name="android:layout_height">5dp</item>
        <item name="android:background">@drawable/round_corners_light</item>
    </style>

    <style name="Hour30b">
        <item name="android:layout_width">26dp</item>
        <item name="android:layout_height">26dp</item>
        <item name="android:layout_marginLeft">25dp</item>
        <item name="android:text">30</item>
    </style>

</resources>
