                        android:text="11" />

                    <View
                        android:id="@+id/hours_1130"
                        style="@style/Hour30" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/hours_30_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="10.5dp">

                <LinearLayout
