                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/hours_30_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="10.5dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <com.github.axet.hourlyreminder.widgets.RoundCheckbox
                        android:id="@id/hours_1230"
                        style="@style/Hour30b" />

                    <com.github.axet.hourlyreminder.widgets.RoundCheckbox
                        android:id="@id/hours_1330"
                        style="@style/Hour30b" />

                    <com.github.axet.hourlyreminder.widgets.RoundCheckbox
                        android:id="@id/hours_1430"
                        style="@style/Hour30b" />

                    <com.github.axet.hourlyreminder.widgets.RoundCheckbox
