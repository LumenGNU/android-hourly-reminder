                        style="@style/Hour30" />

                    <com.github.axet.hourlyreminder.widgets.RoundCheckbox
                        android:id="@+id/hours_05"
                        style="@style/HourRound"
                        android:text="05" />

                    <View
                        android:id="@+id/hours_0530"
                        style="@style/Hour30" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <com.github.axet.hourlyreminder.widgets.RoundCheckbox
                        android:id="@+id/hours_06"
                        style="@style/HourRound"
                        android:text="06" />

                    <View
                        android:id="@+id/hours_0630"
                        style="@style/Hour30" />

                    <com.github.axet.hourlyreminder.widgets.RoundCheckbox
                        android:id="@+id/hours_07"
                        style="@style/HourRound"
                        android:text="07" />

                    <View
                        android:id="@+id/hours_0730"
                        style="@style/Hour30" />

                    <com.github.axet.hourlyreminder.widgets.RoundCheckbox
                        android:id="@+id/hours_08"
                        style="@style/HourRound"
                        android:text="08" />

                    <View
                        android:id="@+id/hours_0830"
                        style="@style/Hour30" />

                    <com.github.axet.hourlyreminder.widgets.RoundCheckbox
