<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="5dp"
    android:visibility="visible">

    <LinearLayout
        android:id="@+id/reminder_hours"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/hours_am"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/day_am_full"
            android:textSize="20dp" />

        <com.github.axet.androidlibrary.widgets.SquareLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            app:maxChild="60dp">

            <com.github.axet.hourlyreminder.widgets.RoundCheckbox
                android:id="@+id/hours_00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="00" />

            <com.github.axet.hourlyreminder.widgets.RoundCheckbox
                android:id="@+id/hours_01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="01" />

            <com.github.axet.hourlyreminder.widgets.RoundCheckbox
                android:id="@+id/hours_02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="02" />

            <com.github.axet.hourlyreminder.widgets.RoundCheckbox
                android:id="@+id/hours_03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="03" />

            <com.github.axet.hourlyreminder.widgets.RoundCheckbox
                android:id="@+id/hours_04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="04" />

            <com.github.axet.hourlyreminder.widgets.RoundCheckbox
                android:id="@+id/hours_05"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="05" />
            />
        </com.github.axet.androidlibrary.widgets.SquareLinearLayout>

        <com.github.axet.androidlibrary.widgets.SquareLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            app:maxChild="60dp">

            <com.github.axet.hourlyreminder.widgets.RoundCheckbox
                android:id="@+id/hours_06"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="06" />

