                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <com.github.axet.hourlyreminder.widgets.RoundCheckbox
                        android:id="@id/hours_0030"
                        style="@style/Hour30b" />

                    <com.github.axet.hourlyreminder.widgets.RoundCheckbox
