                android:id="@+id/hours_60_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <com.github.axet.hourlyreminder.widgets.RoundCheckbox
                        android:id="@+id/hours_00"
                        style="@style/HourRound"
                        android:text="00" />

                    <View
                        android:id="@+id/hours_0030"
                        style="@style/Hour30" />

                    <com.github.axet.hourlyreminder.widgets.RoundCheckbox
                        android:id="@+id/hours_01"
                        style="@style/HourRound"
                        android:text="01" />

                    <View
                        android:id="@+id/hours_0130"
                        style="@style/Hour30" />

                    <com.github.axet.hourlyreminder.widgets.RoundCheckbox
                        android:id="@+id/hours_02"
                        style="@style/HourRound"
                        android:text="02" />

                    <View
                        android:id="@+id/hours_0230"
                        style="@style/Hour30" />

                    <com.github.axet.hourlyreminder.widgets.RoundCheckbox
                        android:id="@+id/hours_03"
                        style="@style/HourRound"
                        android:text="03" />

                    <View
                        android:id="@+id/hours_0330"
                        style="@style/Hour30" />

