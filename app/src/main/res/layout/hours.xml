                    <com.github.axet.hourlyreminder.widgets.RoundCheckbox
                        android:id="@id/hours_2130"
                        style="@style/Hour30b" />

                    <com.github.axet.hourlyreminder.widgets.RoundCheckbox
                        android:id="@id/hours_2230"
                        style="@style/Hour30b" />

                    <com.github.axet.hourlyreminder.widgets.RoundCheckbox
                        android:id="@id/hours_2330"
                        style="@style/Hour30b" />
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>

        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="5dp"
            android:text="status"
            android:textSize="12sp" />
    </LinearLayout>
</ScrollView>
