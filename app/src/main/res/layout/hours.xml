                        style="@style/HourRound"
                        android:text="17" />

                    <View
                        android:id="@+id/hours_1730"
                        style="@style/Hour30" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <com.github.axet.hourlyreminder.widgets.RoundCheckbox
                        android:id="@+id/hours_18"
                        style="@style/HourRound"
                        android:text="18" />

                    <View
                        android:id="@+id/hours_1830"
                        style="@style/Hour30" />

                    <com.github.axet.hourlyreminder.widgets.RoundCheckbox
                        android:id="@+id/hours_19"
                        style="@style/HourRound"
                        android:text="19" />

                    <View
                        android:id="@+id/hours_1930"
                        style="@style/Hour30" />

                    <com.github.axet.hourlyreminder.widgets.RoundCheckbox
                        android:id="@+id/hours_20"
                        style="@style/HourRound"
                        android:text="20" />

                    <View
                        android:id="@+id/hours_2030"
                        style="@style/Hour30" />

                    <com.github.axet.hourlyreminder.widgets.RoundCheckbox
                        android:id="@+id/hours_21"
                        style="@style/HourRound"
                        android:text="21" />

                    <View
                        android:id="@+id/hours_2130"
                        style="@style/Hour30" />

                    <com.github.axet.hourlyreminder.widgets.RoundCheckbox
