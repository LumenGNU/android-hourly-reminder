                    <com.github.axet.hourlyreminder.widgets.RoundCheckbox
                        android:id="@id/hours_0830"
                        style="@style/Hour30b" />

                    <com.github.axet.hourlyreminder.widgets.RoundCheckbox
                        android:id="@id/hours_0930"
                        style="@style/Hour30b" />

                    <com.github.axet.hourlyreminder.widgets.RoundCheckbox
                        android:id="@id/hours_1030"
                        style="@style/Hour30b" />

                    <com.github.axet.hourlyreminder.widgets.RoundCheckbox
                        android:id="@id/hours_1130"
                        style="@style/Hour30b" />
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>

        <TextView
            android:id="@+id/hours_pm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/day_pm_full"
            android:textSize="20dp" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/hours_60_2"
                android:layout_width="wrap_content"
