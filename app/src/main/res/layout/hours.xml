                android:id="@+id/hours_09"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="09" />

            <com.github.axet.hourlyreminder.widgets.RoundCheckbox
                android:id="@+id/hours_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="10" />

            <com.github.axet.hourlyreminder.widgets.RoundCheckbox
