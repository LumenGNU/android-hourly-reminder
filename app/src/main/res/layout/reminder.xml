<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/appbar_padding_top"
    tools:context=".fragments.AlarmsFragment">

    <com.github.axet.androidlibrary.widgets.EqualLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/reminder_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:text="00-23h"
            android:textSize="36dp"
            android:textStyle="bold" />

        <Switch
            android:id="@+id/reminder_enable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </com.github.axet.androidlibrary.widgets.EqualLinearLayout>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/reminder_hours"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hours" />

            <com.github.axet.androidlibrary.widgets.SquareLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                app:maxChild="60dp">

                <com.github.axet.hourlyreminder.widgets.RoundCheckbox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="00" />

                <com.github.axet.hourlyreminder.widgets.RoundCheckbox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="01" />

                <com.github.axet.hourlyreminder.widgets.RoundCheckbox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="02" />

                <com.github.axet.hourlyreminder.widgets.RoundCheckbox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="03" />

                <com.github.axet.hourlyreminder.widgets.RoundCheckbox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="04" />

                <com.github.axet.hourlyreminder.widgets.RoundCheckbox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="05" />
                />
            </com.github.axet.androidlibrary.widgets.SquareLinearLayout>

            <com.github.axet.androidlibrary.widgets.SquareLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                app:maxChild="60dp">

                <com.github.axet.hourlyreminder.widgets.RoundCheckbox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="06" />

                <com.github.axet.hourlyreminder.widgets.RoundCheckbox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="07" />

                <com.github.axet.hourlyreminder.widgets.RoundCheckbox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="08" />

                <com.github.axet.hourlyreminder.widgets.RoundCheckbox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="09" />

                <com.github.axet.hourlyreminder.widgets.RoundCheckbox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="10" />

                <com.github.axet.hourlyreminder.widgets.RoundCheckbox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="11" />
                />
            </com.github.axet.androidlibrary.widgets.SquareLinearLayout>

            <com.github.axet.androidlibrary.widgets.SquareLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                app:maxChild="60dp">

                <com.github.axet.hourlyreminder.widgets.RoundCheckbox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="12" />

                <com.github.axet.hourlyreminder.widgets.RoundCheckbox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="13" />

                <com.github.axet.hourlyreminder.widgets.RoundCheckbox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="14" />

                <com.github.axet.hourlyreminder.widgets.RoundCheckbox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="15" />

                <com.github.axet.hourlyreminder.widgets.RoundCheckbox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="16" />

                <com.github.axet.hourlyreminder.widgets.RoundCheckbox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="17" />
                />
            </com.github.axet.androidlibrary.widgets.SquareLinearLayout>

            <com.github.axet.androidlibrary.widgets.SquareLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                app:maxChild="60dp">

                <com.github.axet.hourlyreminder.widgets.RoundCheckbox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="18" />

                <com.github.axet.hourlyreminder.widgets.RoundCheckbox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="19" />

                <com.github.axet.hourlyreminder.widgets.RoundCheckbox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="20" />

                <com.github.axet.hourlyreminder.widgets.RoundCheckbox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="21" />

                <com.github.axet.hourlyreminder.widgets.RoundCheckbox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="22" />

                <com.github.axet.hourlyreminder.widgets.RoundCheckbox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="23" />
                />
            </com.github.axet.androidlibrary.widgets.SquareLinearLayout>

        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Volume" />

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progress="60" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="60%" />

    </LinearLayout>

    <com.github.axet.androidlibrary.widgets.EqualLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alarm Type" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Beep" />
    </com.github.axet.androidlibrary.widgets.EqualLinearLayout>

</LinearLayout>
